<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.commondemo.xiaoyu.commondemo.service.workmanager.WorkerActivity">

    <Button
        android:id="@+id/worker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/gap_20"
        android:layout_marginLeft="@dimen/gap_20"
        android:text="oneTime"
        />

    <Button
        android:id="@+id/periodicWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/worker"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/gap_20"
        android:layout_marginLeft="@dimen/gap_20"
        android:text="PeriodicWorkRequest"
        />

</android.support.constraint.ConstraintLayout>
